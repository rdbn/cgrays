{% extends 'base.html.twig' %}

{% block title %}Новости{% endblock %}

{% block body %}
    <div class="container top20">
        <div class="row">
            {% for news in pagination %}
                <div class="col-lg-12">
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            <h3 class="panel-title">
                                <a href="{{ path('app.news.news', {'id': news.id}) }}">{{ news.title }}</a>
                            </h3>
                        </div>
                        <div class="panel-body">
                            <p>
                                {{ news.text|strlen(300) }}
                            </p>
                            <span class="text-muted text-sm">{{ news.createdAt.format('Y-m-d H:i:s') }}</span>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>

    <div class="container">
        <div class="navigation">
            {{ knp_pagination_render(pagination) }}
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    <script type="text/javascript" src="{{ asset('bundles/app/js/chat.js') }}"></script>
{% endblock %}
