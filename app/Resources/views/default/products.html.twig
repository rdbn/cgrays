{% extends 'base.html.twig' %}

{% block title %}Купить предметы | Магазин Dota markets{% endblock %}
{% block stylesheets %}
    <link href="{{ asset('bundles/app/css/bootstrap-select.min.css') }}" rel="stylesheet">
{% endblock %}

{% block body %}
    {{ form_start(form) }}
        <div class="row">
            <div class="col-lg-12">
                <div class="input-group">
                    {{ form_widget(form.name) }}
                    <span class="input-group-btn">
                        <button class="btn btn-warning" type="submit">
                            <span class="glyphicon glyphicon-search"></span>
                        </button>
                    </span>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-3 top20">
                {{ form_widget(form.heroes) }}
            </div>
            <div class="col-lg-3 top20">
                {{ form_widget(form.typeProduct) }}
            </div>
            <div class="col-lg-3 top20">
                {{ form_widget(form.quality) }}
            </div>
            <div class="col-lg-3 top20">
                {{ form_widget(form.rarity) }}
            </div>
        </div>
    {{ form_end(form) }}

    <div class="row top20">
        <div class="col-lg-12">
            <div class="alert alert-warning">
                <strong><span class="text-warning">Сортировка по:</span></strong>
                <div class="btn-group" role="group">
                    {{ knp_pagination_sortable(pagination, 'Названию', 'name') }}
                    {{ knp_pagination_sortable(pagination, 'Цене', 'price') }}
                </div>
            </div>
        </div>
    </div>

    <div class="row">
    {% for product in pagination %}
        <div class="col-xs-6 col-sm-4 col-md-3">
            <div class="thumbnail">
                <a href="{{ path('app.product.product', { "productId": product.product_id, "productPriceId": product.price_id }) }}">
                    <img src="{{ asset(product.icon_url) }}" alt="{{ product.name }}">
                </a>
                <div class="caption">
                    <p>
                        <strong><span class="text-warning">{{ product.price }} <span class="glyphicon glyphicon-rub"></span></span></strong>
                        {% if is_granted("ROLE_USER") %}
                            <button data-product="{{ product.product_id }}" data-product-price="{{ product.price_id }}" class="btn btn-danger add-basket">
                                Купить
                            </button>
                        {% endif %}
                    </p>
                </div>
            </div>
        </div>
    {% endfor %}
    </div>

    <div class="navigation">
        {{ knp_pagination_render(pagination) }}
    </div>
{% endblock %}

{% block javascripts %}
    <script type="text/javascript" src="{{ asset('bundles/app/js/bootstrap-select.min.js') }}"></script>
    <script type="text/javascript" src="{{ asset('bundles/app/js/defaults-ru_RU.min.js') }}"></script>
    <script type="text/javascript" src="{{ asset('bundles/app/js/add-basket.js') }}"></script>
{% endblock %}
