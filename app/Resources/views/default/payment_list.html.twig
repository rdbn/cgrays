{% extends 'base.html.twig' %}

{% block title %}Пополнить баланас{% endblock %}

{% block body %}
    {{ include(':default/payment:menu.html.twig') }}
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <table class="table">
                    <thead>
                        <tr>
                            <th>Платежная система</th>
                            <th>Информация о платеже</th>
                        </tr>
                    </thead>
                    <tbody>
                    {% for payment in payments %}
                        <tr>
                            <td>{{ payment.paymentSystem.name }}</td>
                            <td>{{ payment.paymentInformation }}</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock %}
